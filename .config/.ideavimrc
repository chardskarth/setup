let mapleader = " "

:set timeout timeloutlen=500

nnoremap <C-j> <C-w>j
nnoremap <C-h> <C-w>h
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l

nnoremap <leader>l gt
nnoremap <leader>h gT

nnoremap <C-o> :action Back<CR>
nnoremap <C-i> :action Forward<CR>
nnoremap <C-x> :action GotoNextError<CR>
nnormap <leader>wx :action CloseEditor<CR>
nnoremap <leader>p :action GotoFile<CR>
nnoremap <leader><leader>c :action GotoClass<CR>
nnoremap <leader>[ :action GotoImplementation<CR>
nnoremap <leader>> :action MoveEditorToOppositeTabGroup<CR>
nnoremap <C-y> :action MoveLineDown<CR>
nnoremap <C-u> :action MoveLineUp<CR>

nnoremap < :action PreviousTab<CR>
nnoremap > :action NextTab<CR>

set relativenumber
set number
set visualbell
set noerrorbells

set scrolloff=40

nnoremap H :action CollapseRegion<CR>
nnoremap L :action ExpandRegion<CR>

nnoremap <leader><leader>r :source ~/.ideavimrc<CR>